<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="@string/info_text_view_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:id="@+id/infoTextView"
    />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoTextView"
            android:layout_marginTop="50dp"
            android:id="@+id/numberEditText"
            android:hint="@string/number_edit_text_hint" android:textAlignment="center"/>

    <Button
            android:text="@string/button_play_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            android:id="@+id/button"
            android:backgroundTint="@color/colorPrimary"/>
    <TextView
            android:text="@string/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/historyTextView"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/numberEditText"
            app:layout_constraintHorizontal_bias="0.073"/>
    <TextView
            android:layout_width="377dp"
            android:layout_height="204dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/historyTextViewInfo"
            android:layout_marginBottom="20dp"
            android:scrollbars = "vertical"
            app:layout_constraintBottom_toTopOf="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/historyTextView" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>